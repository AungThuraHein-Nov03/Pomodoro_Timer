<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="20dp"
    tools:context=".MainActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Pomodoro"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#E53935"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Timer Display -->
    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="25:00"
        android:textSize="96sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:letterSpacing="0.05"
        android:textColor="#212121"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/linearProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginTop="16dp"
        android:max="100"
        android:progress="0"
        android:progressTint="#E53935"
        android:progressBackgroundTint="#E0E0E0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timerText" />

    <!-- Sessions Counter -->
    <TextView
        android:id="@+id/streakText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="0 sessions today"
        android:textSize="16sp"
        android:textColor="#757575"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearProgressBar" />

    <!-- Task Input -->
    <EditText
        android:id="@+id/taskNameInput"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:hint="What are you working on?"
        android:inputType="text"
        android:textSize="18sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/input_background"
        android:textColorHint="#999999"
        android:textColor="#212121"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/streakText" />

    <!-- Time Settings Panel -->
    <LinearLayout
        android:id="@+id/inputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toTopOf="@+id/quickPresetLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskNameInput">

        <EditText
            android:id="@+id/workTimeInput"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:hint="Work (min)"
            android:inputType="number"
            android:text="25"
            android:textSize="14sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center"
            android:background="#FFFFFF"
            android:textColorHint="#999999"
            android:textColor="#212121" />

        <EditText
            android:id="@+id/breakTimeInput"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Break (min)"
            android:inputType="number"
            android:text="5"
            android:textSize="14sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center"
            android:background="#FFFFFF"
            android:textColorHint="#999999"
            android:textColor="#212121" />

    </LinearLayout>

    <!-- Quick Presets -->
    <TextView
        android:id="@+id/workPresetLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Quick presets"
        android:textSize="13sp"
        android:textColor="#999999"
        android:letterSpacing="0.05"
        app:layout_constraintBottom_toTopOf="@+id/quickPresetLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputLayout" />

    <LinearLayout
        android:id="@+id/quickPresetLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toTopOf="@+id/statusText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workPresetLabel">

        <Button
            android:id="@+id/presetWork25"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="25 min work"
            android:textSize="13sp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:backgroundTint="#E53935"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/presetBreakShort"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="5 min break"
            android:textSize="13sp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:backgroundTint="#673AB7"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <!-- Control Buttons -->
    <LinearLayout
        android:id="@+id/controlLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quickPresetLayout">

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/startButton"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:src="@drawable/ic_play"
            android:background="@drawable/button_circle_background_start"
            android:scaleType="centerInside"
            android:elevation="8dp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <ImageButton
            android:id="@+id/pauseButton"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:src="@drawable/ic_pause"
            android:visibility="gone"
            android:background="@drawable/button_circle_background_pause"
            android:scaleType="centerInside"
            android:elevation="8dp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <ImageButton
            android:id="@+id/resetButton"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:src="@drawable/ic_reset"
            android:background="@drawable/button_circle_background_reset"
            android:scaleType="centerInside"
            android:elevation="4dp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- Status Text -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ready for work!"
        android:textSize="17sp"
        android:textAlignment="center"
        android:textColor="#757575"
        android:lineSpacingExtra="4dp"
        app:layout_constraintBottom_toTopOf="@+id/controlLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quickPresetLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>
