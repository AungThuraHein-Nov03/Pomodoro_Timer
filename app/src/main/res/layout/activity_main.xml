<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- Header / Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Pomodoro Timer"
        android:letterSpacing="0.1"
        android:textAllCaps="true"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/pomodoro_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
        
    <!-- Session Status / Counter -->
    <LinearLayout
        android:id="@+id/statusContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_pill_gray"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_check_circle"
            app:tint="@color/text_secondary"
            android:layout_marginEnd="8dp"/>
            
        <TextView
            android:id="@+id/streakText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 sessions today"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_secondary" />
    </LinearLayout>

    <!-- Main Timer Display -->
    <TextView
        android:id="@+id/timerText"
        style="@style/TimerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="25:00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusContainer" />

    <!-- Minimalist Progress Line -->
    <ProgressBar
        android:id="@+id/linearProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginTop="24dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/progress_drawable_rounded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timerText"
        app:layout_constraintWidth_percent="0.6"/>
        
    <!-- Status Label (Work/Break) -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ready to focus?"
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:letterSpacing="0.02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearProgressBar" />

    <!-- Task Input (Modern Card) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/taskCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#F0F0F0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusText">
        
        <EditText
            android:id="@+id/taskNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:background="@null"
            android:hint="What are you working on?"
            android:inputType="textCapSentences"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint" />
    </androidx.cardview.widget.CardView>

    <!-- Main Controls (FAB-like) -->
    <LinearLayout
        android:id="@+id/controlLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Reset (Secondary) -->
        <ImageButton
            android:id="@+id/resetButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_refresh"
            android:background="@drawable/bg_button_secondary"
            android:contentDescription="Reset"
            android:elevation="2dp"
            app:tint="@color/text_secondary" />

        <Space android:layout_width="24dp" android:layout_height="0dp" />

        <!-- Play/Pause (Primary) -->
        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp">

            <ImageButton
                android:id="@+id/startButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_play_arrow"
                android:background="@drawable/bg_button_primary"
                android:contentDescription="Start"
                android:scaleType="centerInside"
                android:elevation="6dp"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/pauseButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_pause"
                android:background="@drawable/bg_button_primary"
                android:contentDescription="Pause"
                android:scaleType="centerInside"
                android:visibility="gone"
                android:elevation="6dp"
                app:tint="@color/white" />
        </FrameLayout>

        <Space android:layout_width="24dp" android:layout_height="0dp" />

        <!-- Stats (Secondary) -->
        <ImageButton
            android:id="@+id/statsButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_bar_chart"
            android:background="@drawable/bg_button_secondary"
            android:contentDescription="Statistics"
            android:elevation="2dp"
            app:tint="@color/text_secondary" />

    </LinearLayout>
    
    <!-- Presets & Settings -->

    <!-- Hidden inputs for logic compatibility -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/controlLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <!-- STUDY TIME SECTION -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:letterSpacing="0.2"
            android:text="STUDY TIME"
            android:textColor="@color/text_hint"
            android:textSize="10sp" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/presetWork15"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:minWidth="0dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="15m"
                    android:textColor="@color/pomodoro_primary"
                    android:textSize="12sp"
                    app:strokeColor="@color/pomodoro_primary" />

                <Button
                    android:id="@+id/presetWork25"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:minWidth="0dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="25m"
                    android:textColor="@color/pomodoro_primary"
                    android:textSize="12sp"
                    app:strokeColor="@color/pomodoro_primary" />

                <Button
                    android:id="@+id/presetWork45"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:minWidth="0dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="45m"
                    android:textColor="@color/pomodoro_primary"
                    android:textSize="12sp"
                    app:strokeColor="@color/pomodoro_primary" />

                <Button
                    android:id="@+id/presetWork90"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:minWidth="0dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="90m"
                    android:textColor="@color/pomodoro_primary"
                    android:textSize="12sp"
                    app:strokeColor="@color/pomodoro_primary" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- BREAK TIME SECTION -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:letterSpacing="0.2"
            android:text="BREAK TIME"
            android:textColor="@color/text_hint"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/presetBreakShort"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:text="5m"
                android:textColor="@color/break_primary"
                android:textSize="12sp"
                app:strokeColor="@color/break_primary" />

            <Button
                android:id="@+id/presetBreakLong"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minWidth="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:text="15m"
                android:textColor="@color/break_primary"
                android:textSize="12sp"
                app:strokeColor="@color/break_primary" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
